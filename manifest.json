{
    "manifest_version": 3,
    "name": "Filerium",
    "version": "1",
    "description": "-",
    "permissions": [
        "activeTab",
        "clipboardRead",
        "scripting",
        "tabs",
        "storage"
    ],
    "action": {
        "default_popup": "src/modal.html",
        "default_icon": "src/images/filerium-w.svg"
    },
    "background": {
        "service_worker": "dist/background.js"
    },
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "dist/content.js",
                "dist/inject.js"
            ],
            "all_frames": true,
            "run_at": "document_start"
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "src/clipboard-helpers/clipboard-helper.html",
                "dist/clipboard-helpers/clipboard-helper.js",
                "dist/clipboard-helpers/clipboard-access-helper.js",
                "src/css/styles.css",
                "dist/modal.js",
                "dist/inject.js"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "icons": {
        "48": "./src/images/filerium-w.svg",
        "96": "./src/images/filerium-w.svg",
        "128": "./src/images/filerium-w.svg"
    },
    "host_permissions": [
        "<all_urls>"
    ],
    "content_security_policy": {
        "extension_pages": "script-src 'self'; object-src 'self'"
    }
}